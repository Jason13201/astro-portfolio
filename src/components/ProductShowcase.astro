---
const { logoSrc, description, title, linkHref, linkText, imageSrc, altText } =
  Astro.props;
---

<section class="product-showcase">
  <div class="info">
    <img src={logoSrc} alt="Product Logo" class="logo" />
    <p class="description">{description}</p>
    <h1>{title}</h1>
    <a href={linkHref} class="link">{linkText}</a>
  </div>
  <div class="image">
    <img src={imageSrc} alt={altText} class="product-image" />
  </div>
</section>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Rubik:wght@400;700&display=swap");

  .product-showcase {
    position: relative;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    background-color: transparent;
    color: white;
    font-family: "Rubik", sans-serif;
  }

  .info {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    flex: 1;
  }

  .logo {
    width: 50px;
    height: 50px;
    margin-bottom: 1rem;
  }

  .description {
    font-size: 1rem;
    color: grey;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .link {
    font-size: 1rem;
    color: #4285f4;
    text-transform: uppercase;
    text-decoration: none;
  }

  .link:hover {
    text-decoration: underline;
  }

  .image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-image {
    width: 40rem;
    height: auto;
    max-width: 100%;
    aspect-ratio: 16 / 9;

    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
</style>
