---
import Layout from "../layouts/Layout.astro";
import ParticlesComponent from "../components/ParticlesComponent";
import Profile from "../components/Profile.astro";
import TechStack from "../components/TechStack.astro";
import Footer from "../components/Footer.astro";
import ProductShowcase from "../components/ProductShowcase.astro";
---

<Layout title="Jason's Portfolio">
  <main style="position: relative;">
    <ParticlesComponent client:load />
    <Profile />
    <TechStack />

    <ProductShowcase
      logoSrc="Flutter.png"
      description="Hack it, Share it! // IOS + ANDROID + FLUTTER"
      title="HACK IT, SHARE IT!"
      linkHref="https://devpost.com/software/hackshare-tn675b"
      linkText="CHECK IT OUT!"
      imageSrc="/hackshare.png"
      altText="Hack it, share it iOS app"
    />
    <ProductShowcase
      logoSrc="python.png"
      description="WireSafe // Linode + python"
      title="WireSafe"
      linkHref="https://github.com/Jason13201/WireSafe"
      linkText="CHECK IT OUT!"
      imageSrc="/wiresafe.jpg"
      altText="WireSafe in terminal"
    />
    <ProductShowcase
      logoSrc="rpi.png"
      description="Portfoliator // Raspberry Pi + python"
      title="Portfoliator"
      linkHref="https://devpost.com/software/portfoliator"
      linkText="CHECK IT OUT!"
      imageSrc="/portfoliator.jpg"
      altText="portfoliator"
    />
    <Footer />
  </main>
</Layout>
